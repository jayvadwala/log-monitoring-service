{
    "name": "log-monitoring-service",
    "version": "1.0.0",
    "main": "dist/app.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "test": "jest --config jest.config.js",
        "dev": "ts-node src/app.ts",
        "docker:build": "docker build -t log-monitoring-service .",
        "docker:run": "docker run --rm -p 3000:3000 -v /var/log:/var/log:ro log-monitoring-service"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.14",
        "@types/jest": "^29.5.14",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5"
    }
}
